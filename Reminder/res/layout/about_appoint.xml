<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#931d4a" >

        <TextView
            android:id="@+id/wapsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/aboutappo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/hiv_icon" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="21dp"
                android:paddingBottom="15dp"
                android:text="@string/MC"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <EditText
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/local"
                android:layout_alignLeft="@+id/medical_centre"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/nurse"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/text_location"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/doctor"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/textView5"
                android:layout_alignLeft="@+id/nurse"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/arrival"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/textView6"
                android:layout_alignLeft="@+id/doctor"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/textView7"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="date|text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/daysLeft"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toRightOf="@+id/textView6"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/medical_centre"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/local"
                android:layout_toRightOf="@+id/fullname"
                android:background="@drawable/edittext"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/fullname"
                android:layout_below="@+id/fullname"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/local"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/local"
                android:layout_below="@+id/local"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/details"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/dT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_toLeftOf="@+id/doctor"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/AT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/daysLe"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#660666"
                android:textStyle="bold|normal" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>